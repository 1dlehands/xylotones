<div class="row">
	
	<div class="span2 offset1">
		<button type='button' id="show">show deleted</button></br>
		<button type='button' id="hide">hide deleted</button></br>
		<button href="<%= xylotone_path(@xylotone)%>" method="put" id="save-image" data-image-id="<%= @xylotone.id %>">Save</button>
	</div>
	
	<div class="span8 offset3" id="xylo-box">
		<svg xmlns="http://www.w3.org/2000/svg" version="1.1"
		       width="640px" height="480px" viewBox="0 0 640 480" xml:space="preserve" id="view-area" z-index="1">

		  <% @dots.each do |dot| %>
		    <circle cx="<%= dot[1] * 8 + 5 %>" cy="<%= dot[2] * 8    + 5%>" r="<%= [(dot[3]/100).to_f/50.0, 4].min %>" class='full' data-id="<%= dot[0] %>"/>
		  <% end %>
		</svg>
		<div id="selection-box" class="hidden"></div>
	</div>
	
</div>




